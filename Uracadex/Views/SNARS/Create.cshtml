@model Uracadex.Models.SNARS_FormViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Create</h2>*@
<link href="~/Content/form-validation.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="bg-light pt-5">

        <div class="container">

            <div class="row">
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">SNARS FORM</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName"><span style="color:red;">*</span>First name</label>
                                <input type="text" class="form-control" name="firstname" id="firstName" placeholder="First Name" value="@Model.FirstName" required>
                                <div class="invalid-feedback">
                                    Valid first name is required.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName"><span style="color:red;">*</span>Last name</label>
                                <input type="text" class="form-control" name="lastname" id="lastName" placeholder="Last Name" value="@Model.LastName" required>
                                <div class="invalid-feedback">
                                    Valid last name is required.
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="phone"><span style="color:red;">*</span>Phone</label>
                            <input type="tel" class="form-control" id="email" name="phone" placeholder="+234-708-108-2439" value="@Model.Phone" required>
                            <div class="invalid-feedback">
                                Please enter a valid phone for updates.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email"><span style="color:red;">*</span>Email</label>
                            <input type="email" class="form-control" value="@Model.Email" id="email" name="email" placeholder="you@example.com" required>
                            <div class="invalid-feedback">
                                Please enter a valid email address for updates.
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="country"><span style="color:red;">*</span>Institution</label>
                                @Html.DropDownList("universityId", Model.UniversityDropDown, new { @class = "custom-select d-block w-100" })
                                @*<select class="custom-select d-block w-100" id="country" required>
                                        <option value="">Choose...</option>
                                        <option value="@Model.UniversityId">Niger Delta University</option>
                                    </select>*@
                                <div class="invalid-feedback">
                                    Select a valid University.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state"><span style="color:red;">*</span>Course of Study</label>
                                <select name="courseofstudy" class="custom-select d-block w-100" id="state" required>
                                    <option value="">Choose...</option>
                                    <option value="ELECT/ELECT ENGR">Electrical/Electronics Engineering</option>
                                </select>
                                <div class="invalid-feedback">
                                    Select a valid Course.
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="state"><span style="color:red;">*</span>Level</label>
                                <select name="level" class="custom-select d-block w-100" id="state" required>
                                    <option value="">Choose...</option>
                                    <option value="400">500</option>
                                    <option value="400">400</option>
                                    <option value="400">300</option>
                                    <option value="400">200</option>
                                    <option value="400">100</option>
                                </select>
                                <div class="invalid-feedback">
                                    Select a valid Level.
                                </div>
                            </div>
                        </div>

                        <div class="d-block my-3">
                            <label for="country"><span style="color:red;">*</span>How do want Uracadex to help you</label>

                            <div class="custom-control custom-radio">
                                @Html.RadioButton("request", "Project Topic", true, new { @class = "custom-control-input", id = "request" })
                                @*<input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input" checked>*@
                                <label class="custom-control-label" for="credit">Project Topic</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input">
                                <label class="custom-control-label" for="debit">Data Analysis</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input">
                                <label class="custom-control-label" for="paypal">Project Write Guide</label>
                            </div>

                            <div class="custom-control custom-radio">
                                <input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input">
                                <label class="custom-control-label" for="rock">Mentorship</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input">
                                <label class="custom-control-label" for="roll">Tutorship</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="request" name="request" type="checkbox" value="@Model.Request" class="custom-control-input">
                                <label class="custom-control-label" for="dish">Others</label>
                            </div>

                            <input type="text" hidden name="request" class="form-control" id="" value="" />

                        </div>

                        <div class="mb-3">
                            <label for="country"><span style="color:red;">*</span>Category</label>
                            <select name="category" class="custom-select d-block w-100" id="country" required>
                                <option value="">Choose...</option>
                                <option value="OND">OND</option>
                                <option value="HND">HND</option>
                                <option value="HND">BSc</option>
                                <option value="HND">MSc</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address"><span style="color:red;">*</span>Research Interest</label>
                            <textarea type="text" class="form-control" id="address" name="researchinterest" placeholder="I love Mechatronics" required>@Model.ResearchInterest</textarea>
                        </div>

                       
                        <hr class="mb-4">
                        <button class="btn btn-primary" value="Create" type="submit">Submit</button>
                    </form>
                </div>
            </div>

            <div class="pt-1">
                @Html.ActionLink("Back to List", "List")
            </div>

        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
